<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FetchActivity">

    <LinearLayout
        android:id="@+id/fetch_url"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fetch_rv"
        app:layout_constraintVertical_weight="0.2">

        <!-- to add url bar and button -->

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fetch_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/fetch_url"
        app:layout_constraintBottom_toTopOf="@id/fetch_progress"
        app:layout_constraintVertical_weight="0.6"
        tools:listitem="@layout/item_fetch">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/fetch_progress"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fetch_rv"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_weight="0.2">

        <!-- to add progress bar and loading -->

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>